    .events
      .events-top
        .events-left
          .events-inner
            h2 Обучающие мероприятия
            .events-months
              each item in eventButtons
                if (item.active)
                  button(type="button").events-months__button.active= item.name
                    span= item.count
                else
                  button(type="button").events-months__button= item.name
                    span= item.count
        .events-right
          .events-filter
            select(data-placeholder="Город").select.with-icon.point.js-select
              option(value="1") Москва
              option(value="2") Санкт-Петербург
              option(value="3") Ханты-Мансийск
            select(data-placeholder="Тренер").select.with-icon.person.js-select
              option(value="1") Иванов А.С.
              option(value="2") Петров Ф.В.
              option(value="3") Кульков И.Я.
            select(data-placeholder="Тип мероприятия").select.with-icon.event.js-select
              option(value="1") Творческое
              option(value="2") Профессиональное
              option(value="3") Координальное
            select(data-placeholder="Проект").select.with-icon.project.js-select
              option(value="1") Старт
              option(value="2") Бизнес
              option(value="3") Вуман
            .calendar
              // календарь пока что от jquery ui, при разработке возможна смена
              input(type="text", value="Календарь", readonly).calendar__input.js-calendar
