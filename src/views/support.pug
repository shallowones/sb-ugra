        .swiper-container.partners.js-slider
          .publications-top
            h3 Банки - партнеры
          .swiper-wrapper
            each item in [0, 1]
              a(href="#", style="background-image: url('images/partner-1.jpg')").swiper-slide.partners__item
              a(href="#", style="background-image: url('images/partner-2.jpg')").swiper-slide.partners__item
              a(href="#", style="background-image: url('images/partner-3.jpg')").swiper-slide.partners__item
              a(href="#", style="background-image: url('images/partner-4.jpg')").swiper-slide.partners__item



